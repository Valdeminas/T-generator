@model T_generator.Models.Amazon.Data.Intermediate.AmazonListing

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Product Color</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DesignURL)
        </dt>
        <dd>
            <a href="../../@(Model.DesignURL)">
                <img src="../../@(Model.DesignURL)" alt="@(Model.DesignURL)" width="500" />
                </a>
</dd>
        <dt>
            Product
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AmazonProduct.Name)
        </dd>
        <dt>
            Color
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AmazonProductColor.Name)
        </dd>
        <dt>
            Design
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AmazonDesign.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.AmazonListingID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
