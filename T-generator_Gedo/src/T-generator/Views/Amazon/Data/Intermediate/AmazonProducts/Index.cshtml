@using T_generator.Services.Amazon;

@model PaginatedList<T_generator.Models.Amazon.Data.Intermediate.AmazonProduct>

@{
    ViewData["Title"] = "Index";
}

<h2>Product</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Prefix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().AmazonType.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().AmazonAccount.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prefix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmazonType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmazonAccount.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AmazonProductID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AmazonProductID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AmazonProductID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@for (int i = 1; i < Model.TotalPages + 1; i++)
{
    <a asp-action="Index"
       asp-route-page="@(i)"
       class="btn btn-default @(Model.PageIndex==i ? "disabled" : "") btn">
        @i
    </a>
}
