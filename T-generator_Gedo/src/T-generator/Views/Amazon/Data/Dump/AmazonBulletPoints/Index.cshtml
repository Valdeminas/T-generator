@model IEnumerable<T_generator.Models.Amazon.Data.Dump.AmazonBulletPoint>

@{
    ViewData["Title"] = "Index";
}

<h2>Bullet Point</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BulletPoint)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BulletPoint)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AmazonBulletPointID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AmazonBulletPointID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AmazonBulletPointID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
