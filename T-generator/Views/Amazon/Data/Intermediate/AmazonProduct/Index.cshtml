@model IEnumerable<T_generator.Models.AmazonProduct>

@{
    ViewBag.Title = "Index";
}

<h2>Products</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prefix)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Keywords)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmazonType.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prefix)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>       
        <td>
            @{
                foreach (var keyword in item.Keywords)
                {
                    @keyword.Keyword <br />
                }
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AmazonType.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AmazonProductID }) |
            @Html.ActionLink("Details", "Details", new { id=item.AmazonProductID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AmazonProductID })
        </td>
    </tr>
}

</table>
