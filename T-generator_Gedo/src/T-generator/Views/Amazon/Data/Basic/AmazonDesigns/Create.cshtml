@model T_generator.Models.Amazon.Data.Basic.AmazonDesign

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-horizontal">
        <h4>Design</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="DesignURL" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DesignURL" type="file" class="form-control"/>
                <span asp-validation-for="DesignURL" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AmazonAccountID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="AmazonAccountID" class="form-control" asp-items="ViewBag.AmazonAccountID"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AmazonCategoryID" class="col-md-2 control-label">Category</label>
            <div class="col-md-10">
                <input class="form-control" name="Category" value="@(ViewData["AmazonCategory"])" data-autocomplete-url="@Url.Action("UpdateCategories")" data-label-member="category" data-value-member="amazonCategoryID" />
                <span asp-validation-for="AmazonCategory" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AmazonMarketplaceID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="AmazonMarketplaceID" class="form-control" asp-items="ViewBag.AmazonMarketplaceID"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SearchTags1" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="SearchTags1" class="form-control" />
                <span asp-validation-for="SearchTags1" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SearchTags2" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="SearchTags2" class="form-control" />
                <span asp-validation-for="SearchTags2" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SearchTags3" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="SearchTags3" class="form-control" />
                <span asp-validation-for="SearchTags3" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
